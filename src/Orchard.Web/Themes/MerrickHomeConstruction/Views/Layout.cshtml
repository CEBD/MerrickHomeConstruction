@using Orchard.UI.Resources
@{
    /*Simians Blog*/
    /* Global Includes 
    ***************************************************************/

    SetMeta("X-UA-Compatible", "IE=edge,chrome=1");


    /*Styles*/
    Style.Include("reset.css");

    Style.Include("waffles.css");
    Style.Include("simian/jquery-ui-1.10.0.custom.css");

    Style.Include("font.css");
    Style.Include("site.css");

    Style.Include("navigator.css");


    Style.Include("debug.css");

    /*Scripts*/
    Script.Include("jquery-1.8.2.min.js").AtLocation(ResourceLocation.Head);
    Script.Include("jquery-ui-1.10.0.custom.min.js").AtLocation(ResourceLocation.Head);
    Script.Include("simiansblog.js").AtLocation(ResourceLocation.Head);

    /* Some useful shortcuts or settings
    ***************************************************************/
    Func<dynamic, dynamic> Zone = x => Display(x);

    /* Inserting some ad hoc shapes
    ***************************************************************/

    WorkContext.Layout.Header.Add(New.SiteTitle(), "0");
    WorkContext.Layout.Footer.Add(New.FooterCopyright(), "5");
    WorkContext.Layout.Footer.Add(New.User(), "10");

    /* Last bit of code to prep the layout wrapper
    ***************************************************************/

    Model.Id = "Simians-Blog";
    Model.Classes.Add("waffles site-wrapper");


    dynamic tag = Tag(Model, "div"); // using Tag so the layout div gets the classes, id and other attributes added to the Model
}
