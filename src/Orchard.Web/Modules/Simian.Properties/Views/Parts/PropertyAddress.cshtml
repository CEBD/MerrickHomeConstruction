@{
    Script.Require("jQuery");
    Style.Require("Waffles");
    Script.Include("gmaps");
    Style.Include("PropertyAddressPartEdit");
}


<script>
    $(document).ready(function() {
        
        var myLatlng = new google.maps.LatLng(@Model.PropertyAddressPart.Latitude, @Model.PropertyAddressPart.Longitude);

        var iconBase = 'https://maps.google.com/mapfiles/kml/shapes/';

        
        var myOptions = {
            center: myLatlng,
            zoom: 18,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };

        var gMap = new google.maps.Map($('.googlemap')[0], myOptions);
        var marker = new google.maps.Marker({
            position: myLatlng,
            map: gMap,
            icon: iconBase + 'schools_maps.png',
            shadow: iconBase + 'schools_maps.shadow.png',
            title: '@Model.PropertyAddressPart.Street'
        });
    });
</script>

<div class="waffles">

    <div class="w-12">
        <div class="w-4 w-alpha">
            <span class="w-12 w-alpha w-omega w-v-1 property-address-view-street">@Model.PropertyAddressPart.Street</span>
            <span class="w-12 w-alpha w-omega w-v-1 property-address-view-state">@Model.PropertyAddressPart.City , @Model.PropertyAddressPart.State</span>
            <span class="w-12 w-alpha w-omega w-v-1 property-address-view-zip">@Model.PropertyAddressPart.Zipcode</span>
        </div>
        <div class="w-8 w-omega">

            <div class="googlemap googlemap-view w-12 w-alpha w-omega">
                &nbsp;
            </div>

        </div>
    </div>
</div>
